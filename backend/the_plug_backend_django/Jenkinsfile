                    }*/
                    sh '''
                        pwd
                        ls -a
                        zap-full-scan.py -t http://backend-service:8080/api/
                    '''
                }
            }

            /*stage('Cleanup') {
                when {
                    changeset "${CHANGESET_DIR}"
