                        sh 'docker network create test'
                    }
                }
            }*/

            // TODO debug if test containers can access services
            stage('Run Services') {
                when {
                    changeset "${CHANGESET_DIR}"
                }

                steps {
                    dir("${BACKEND_DIR}") {
                        script {
                            docker.build('wallys02/the-plug-backend:latest').run(
                                '--name backend-service --rm --network test --entrypoint ./test-entrypoint.sh ' +
                                '-e "DB_PASSWORD=$DB_PASSWORD" ' +
                                '-e "DB_USER=$DB_USER" ' +
                                '-e "DB_NAME=$DB_NAME" ' +
                                '-e "DB_HOST=$DB_HOST" ' +
                                '-e "EMAIL_HOST_PASSWORD=$EMAIL_HOST_PASSWORD" ' +
                                '-e "EMAIL_HOST_USER=$EMAIL_HOST_USER" ' +
                                '-e "SECRET_KEY=$SECRET_KEY" ' +
                                '-e "ALLOWED_HOSTS=$ALLOWED_HOSTS" ' +
                                '-e "DEBUG=$DEBUG" ' +
                                '-e "CACHE_ENDPOINT=$CACHE_ENDPOINT" ' +
                                '-e "CACHE_PASSWORD=$CACHE_PASSWORD" ' +
                                '-e "USE_CACHE=$USE_CACHE"'
                            )
                        }
                    }

                    dir("${FRONTEND_DIR}") {
                        script {
                            docker.build('wallys02/the-plug-frontend:latest').run('--name frontend --rm --network test')
                        }
                    }

                    sh 'sleep 5'
                }
            }

            // TODO debug
            stage('E2E Tests') {
                /*when {
                    changeset "${CHANGESET_DIR}"
                }*/

                agent {
                    docker {
                        image 'cypress/included:14.3.3'
                        args '--name cypress -v $PWD:/e2e -w /e2e --network test -e "CYPRESS_BASE_URL=http://frontend" -e "CYPRESS_API_URL=http://backend-service:8080/api/" --entrypoint=""'
                    }
                }

                steps {
                    dir("${FRONTEND_DIR}") {
                        catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                            /*script {
                                docker.image('cypress/included:14.3.3').inside(
                                    '--name cypress -v $PWD:/e2e -w /e2e --network test -e "CYPRESS_BASE_URL=http://frontend" -e "CYPRESS_API_URL=http://backend-service:8080/api/" --entrypoint=""'
                                    // '--entrypoint cypress', 'run --config-file cypress.config.ts --browser chrome'
                                ) {
                                    sh 'cypress run --config-file cypress.config.ts --browser chrome'
                                }
                            }*/
                            sh '''
                                pwd
                                ls -a
                                cypress run --config-file cypress.config.ts --browser chrome
                            '''
                        }
                    }
                }
            }

            // TODO debug
            stage('Performance Tests') {
                /*when {
                    changeset "${CHANGESET_DIR}"
