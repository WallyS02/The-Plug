                agent {
                    docker {
                        image 'locustio/locust:latest'
                        args '--name locust --network test -v $PWD:/mnt/locust --entrypoint=""'
                    }
                }

                steps {
                    dir("${BACKEND_DIR}") {
                        catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                            /*script {
                                // '--entrypoint locust', '-f /mnt/locust/locustfile.py --headless -u 100 -r 10 -t 3m --host http://backend-service:8080/api')
                                docker.image('locustio/locust:latest').inside('--name locust  --rm --network test -v $PWD:/mnt/locust --entrypoint=""')
                                 {
                                    sh 'locust -f /mnt/locust/locustfile.py --headless -u 100 -r 10 -t 3m --host http://backend-service:8080/api'
                                 }
                            }*/
                            sh '''
                                pwd
                                ls -a
                                locust -f /mnt/locust/locustfile.py --headless -u 100 -r 10 -t 3m --host http://backend-service:8080/api
                            '''
                        }
                    }
                }
            }

            // TODO debug
            stage('DAST Tests') {
