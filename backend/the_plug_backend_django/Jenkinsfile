                steps {
                    script {
                        docker.withRegistry("${DOCKER_REGISTRY}", 'dockerhub-creds') {
                            docker.build('wallys02/the-plug-backend:latest', './backend/the_plug_backend_django')
                                .push()
                        }
                    }
                }
            }

