                    dir('k8s/helm/the-plug') {
                        sh '''
                            chmod +x ./run-helm.sh
                            ./run-helm.sh
                            kubectl rollout restart deployment/backend --namespace plug-namespace
                        '''
                    }
                }
            }*/
    }

    post {
        always {
            cleanWs()
        }
    }
}
